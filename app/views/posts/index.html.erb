<% @posts.each do |post| %>
<div class="post">
  <div class="header">
    <div class="title">
      <%= link_to post.title, post %>
    </div>
    <div class="date">
      <%= format_date post.created_at %>
    </div>
    <%= clear %>
  </div>
  <%= clear %>
  <div class="body">
    <%= textile_to_html post.body %>
    
    <% if logged_in? %>
        <div><%= link_to "Edit this post", edit_admin_post_path(post) %></div>
    <% end %>
    
  </div>
  <div class="footer">
    <div class="comments">
      <%= link_to "Comments", post_path(post, :anchor => "disqus_thread"), :"data-disqus-identifier" => "post_#{post.id}" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/disqus_comment_count" %>