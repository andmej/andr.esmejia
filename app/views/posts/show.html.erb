<% title(@post.title) %>
<div class="single-post">
  <div class="header">
    <div class="title">
      <%= @post.title %>
    </div>
    <div class="date">
      <%= format_date @post.created_at %>
    </div>
    <%= clear %>
  </div>
  <%= clear %>
  <div class="body">
    <%= textile_to_html @post.body %>
    
    <% if logged_in? %>
        <div><%= link_to "Edit this post", edit_admin_post_path(@post) %></div>
    <% end %>
  </div>
  <div class="footer">
    <a name="comments"></a>
    <div class="comments-count"></div>
    <div class="comments">
      <%= render "comments" %>      
    </div>
    <div class="comments-footer">
    </div>
  </div>
</div>